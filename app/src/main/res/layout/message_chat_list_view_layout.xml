<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messageChatListProfileImageView"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_baseline_person_color_accent_24"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorGray"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_weight="1.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/messageChatListProfileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accountName"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/messageChatListLastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createdDate"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>