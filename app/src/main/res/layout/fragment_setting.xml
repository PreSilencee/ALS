<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SettingFragment">

    <Button
        android:id="@+id/settingAccountButton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_account"
        android:textColor="@color/colorAccent"
        android:background="@drawable/corner_button_main"
        android:padding="15dp"
        android:drawableEnd="@drawable/ic_outline_keyboard_arrow_right_light_green_24"
        android:gravity="start"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorAccent" />

    <Button
        android:id="@+id/settingChangePasswordButton"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/title_change_password"
        android:textColor="@color/colorAccent"
        android:background="@drawable/corner_button_main"
        android:padding="15dp"
        android:drawableEnd="@drawable/ic_outline_keyboard_arrow_right_light_green_24"
        android:gravity="start"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorAccent" />

    <Button
        android:id="@+id/settingAboutUsButton"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/aboutUs"
        android:textColor="@color/colorAccent"
        android:background="@drawable/corner_button_main"
        android:padding="15dp"
        android:drawableEnd="@drawable/ic_outline_keyboard_arrow_right_light_green_24"
        android:gravity="start"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorAccent" />

    <Button
        android:id="@+id/settingLogOutButton"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/logOut"
        android:textColor="@color/colorRed"
        android:background="@drawable/corner_button_red"
        android:padding="15dp"
        android:drawableEnd="@drawable/ic_outline_keyboard_arrow_right_red_24"
        android:gravity="start"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorAccent" />

</LinearLayout>