<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:weightSum="2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageChatProfileImageView"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_person_color_accent_24"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorGray"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_weight="1.7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/messageChatProfileNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accountName"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/homeEventListEventCreatedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/createdDate"
            android:textStyle="italic"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>